<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:mvc="http://www.springframework.org/schema/mvc"
  xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
    http://www.springframework.org/schema/mvc http://www.springframework.org/schema/mvc/spring-mvc-3.0.xsd
    http://www.springframework.org/schema/util http://www.springframework.org/schema/util/spring-util-3.0.xsd">

  <!-- I'm leaving this here as an example how to restore AMQP metrics publishing ;)

  <bean id="metricsPublisher" class="org.springframework.aop.framework.ProxyFactoryBean">
    <property name="interceptorNames">
      <list>
        <value>metricsPublisherInterceptor</value>
      </list>
    </property>  
    <property name="target">
      <bean id="metricsPublisher_internal" class="com.outbrain.gruffalo.publish.AmqpMetricsPublisher">
        <constructor-arg ref="rabbitTemplate"/>
      </bean>
    </property>
  </bean>
  -->

  <!-- feature flag for activating different metrics publishers strategies -->
  <alias name="${com.outbrain.metrics.publisher.bean.name}" alias="metricsPublisher"/>

  <bean id="compoundMetricsPublisher" class="com.outbrain.gruffalo.publish.CompoundMetricsPublisher" lazy-init="true">
    <constructor-arg>
      <list>
        <ref local="mainGraphiteMetricsPublisher"/>
        <ref local="secondaryGraphiteMetricsPublisher"/>
      </list>
    </constructor-arg>
  </bean>
  <bean id="mainGraphiteMetricsPublisher" class="com.outbrain.gruffalo.publish.GraphiteMetricsPublisher" lazy-init="true">
    <constructor-arg ref="mainGraphiteClient"/>
  </bean>
  <bean id="secondaryGraphiteMetricsPublisher" class="com.outbrain.gruffalo.publish.GraphiteMetricsPublisher" lazy-init="true">
    <constructor-arg ref="secondaryGraphiteClient"/>
  </bean>

</beans>